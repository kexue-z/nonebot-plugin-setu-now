{
    "editor.formatOnSave": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/.venv/**": true,
        "**/.mypy_cache/**": true
    },
    "autoDocstring.customTemplatePath": ".vscode/docstring.mustache",
    "files.encoding": "utf8",
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "files.exclude": {
        "**/__pycache__": true,
        ".venv": true,
        ".mypy_cache": true,
        "poetry.lock": true,
        "LICENSE": true
    },
    "ruff.enable": true
}